#VRML V2.0 utf8

DEF sun Transform {
  children [
    Shape {
      appearance Appearance {
        material Material {
          emissiveColor 1 1 0 # yellow
        }
      }
      geometry Sphere {
        radius 10 # desired radius of the sun
      }
    }
  ]
}

DEF earth Transform {
  translation 50 0 0 # initial position of Earth
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 0 0 1 # blue
        }
      }
      geometry Sphere {
        radius 5 # desired radius of the earth
      }
    }
  ]
}


